  "version": "2.0.0",
  "tasks": [
    {
      "label": "textlint",
      "type": "shell",
      "command": "npx textlint ./articles/*.md"
    },
    {
      "label": "create article",
      "type": "shell",
      "command": "npx zenn new:article"
    },
    {
      "label": "update zenn cli",
      "type": "shell",
      "command": "npm install zenn-cli@latest"
    }
  ]
}